//用户表
CREATE TABLE user(
username VARCHAR(20) NOT NULL,
userkey VARCHAR(32) NOT NULL,
signature VARCHAR(100),
mail_address VARCHAR(100),
bonus INT DEFAULT 10,
praise_num INT DEFAULT 0,
criticize_num INT DEFAULT 0,
question_num INT DEFAULT 0,
register_time DATETIME NOT NULL,
last_launch_time DATETIME NOT NULL,
PRIMARY KEY(username)
); 
//在线用户名单
CREATE TABLE online_user(
username VARCHAR(20) NOT NULL,
PRIMARY KEY (username)
);
//问题表
CREATE TABLE question(
owner VARCHAR(20) NOT NULL,
id BIGINT AUTO_INCREMENT,
stem VARCHAR(300) NOT NULL,
addition VARCHAR(300),
date DATE NOT NULL,
time TIME NOT NULL,
solved TINYINT(1) DEFAULT 0,
PRIMARY KEY(id)
);
//id为?的问题答疑记录
CREATE TABLE question_id=?(
record VARCHAR NOT NULL,
username VARCHAR(20) NOT NULL,
date DATE NOT NULL,
time TIME NOT NULL,
);

//日期格式 2017-01-19
//时间格式 10：55：34
